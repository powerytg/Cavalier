<?xml version="1.0" encoding="utf-8"?>
<crescent:Window xmlns:fx="http://ns.adobe.com/mxml/2009" 
				 xmlns:s="library://ns.adobe.com/flex/spark" 
				 xmlns:crescent="library://cavalier/frameworks/crescent" 
				 width="640" height="130">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	
	
	<s:HGroup width="100%" height="100%" verticalAlign="middle"
			  paddingLeft="15" paddingRight="15">
		<s:BitmapImage source="@Embed('skins/images/Alert.png')"/>
		<s:Label width="100%" color="#ffffff" text="Do you wish to remove all notifications?"/>
		<crescent:RedButton id="confirmButton" label="Clear All"/>
		<crescent:Button id="cancelButton" label="Cancel"/>
	</s:HGroup> 
	
</crescent:Window>
