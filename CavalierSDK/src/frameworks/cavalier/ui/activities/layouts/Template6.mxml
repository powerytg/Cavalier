		 xmlns:supportClasses="frameworks.cavalier.ui.activities.supportClasses.*" 
		 implements="frameworks.cavalier.ui.activities.layouts.ILayoutTemplate" >
	<fx:Script>
		<![CDATA[
			
			public function get holders():Array
			{
				return [holder1, holder2, holder3];
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:VGroup left="0" right="0" top="0" bottom="0"
			  gap="15">
		<s:HGroup width="100%" height="40%" gap="30">
			<supportClasses:UIPartHolder id="holder1" width="50%" height="100%"/>
			<supportClasses:UIPartHolder id="holder2" width="50%" height="100%"/>
		</s:HGroup>
		
		<supportClasses:UIPartHolder id="holder3" width="100%" height="60%"/>
	</s:VGroup> 
	
</s:Group>
