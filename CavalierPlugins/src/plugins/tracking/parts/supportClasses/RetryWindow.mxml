<?xml version="1.0" encoding="utf-8"?>
<crescent:Window xmlns:fx="http://ns.adobe.com/mxml/2009" 
				 xmlns:s="library://ns.adobe.com/flex/spark" 
				 xmlns:crescent="library://cavalier/frameworks/crescent" 
				 width="450" height="230"
				 >
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<s:VGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center"
			  paddingLeft="15" paddingRight="15" paddingTop="20" paddingBottom="20">
		<s:Label width="100%" color="#ffffff" fontSize="20" text="A fatal error occured on the server"
				 textAlign="center" />
		
		<s:Spacer height="100%"/>
		<crescent:RedButton id="resetButton" label="Reset Database and Server" width="100%"/>
		<crescent:Button id="retryButton" label="Retry" width="100%"/>			
	</s:VGroup> 
	
</crescent:Window>
